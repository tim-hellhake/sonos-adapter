{
    "id": "sonos-adapter",
    "short_name": "Sonos",
    "name": "Sonos",
    "version": "0.11.0",
    "author": "Tim Hellhake",
    "description": "Sonos adapter for WebThings Gateway.",
    "homepage_url": "https://github.com/tim-hellhake/sonos-adapter#readme",
    "license": "MIT",
    "manifest_version": 1,
    "gateway_specific_settings": {
        "webthings": {
            "exec": "{nodeLoader} {path}",
            "primary_type": "adapter",
            "strict_min_version": "2.0.0-alpha.1"
        }
    },
    "options": {
        "default": {
            "addresses": [],
            "spotifyRegion": "EU",
            "features": {
                "group": true,
                "crossfade": true,
                "track": true,
                "album": true,
                "artist": true,
                "albumArt": true
            }
        },
        "schema": {
            "type": "object",
            "required": [
                "addresses"
            ],
            "properties": {
                "spotifyRegion": {
                    "type": "string",
                    "title": "Your Spotify region",
                    "enum": [
                        "EU",
                        "US"
                    ]
                },
                "features": {
                    "type": "object",
                    "title": "Enabled features",
                    "properties": {
                        "group": {
                            "type": "boolean",
                            "title": "Group/Ungroup"
                        },
                        "crossfade": {
                            "type": "boolean",
                            "title": "Crossfade"
                        },
                        "track": {
                            "type": "boolean",
                            "title": "Track"
                        },
                        "album": {
                            "type": "boolean",
                            "title": "Album"
                        },
                        "artist": {
                            "type": "boolean",
                            "title": "Artist"
                        },
                        "albumArt": {
                            "type": "boolean",
                            "title": "Album art"
                        }
                    }
                },
                "addresses": {
                    "type": "array",
                    "description": "List of IP addresses of speakers",
                    "items": {
                        "type": "string",
                        "description": "IP address"
                    }
                }
            }
        }
    }
}
